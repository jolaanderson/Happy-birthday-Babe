<script>
// ==========================
// Simple animated hearts/tree
// ==========================
const canvas = document.getElementById('canvas');
const ctx = canvas.getContext('2d');
const hearts = [];

// Heart particle
class Heart {
    constructor(x, y, size, speed) {
        this.x = x;
        this.y = y;
        this.size = size;
        this.speed = speed;
        this.alpha = 1;
    }
    draw() {
        ctx.save();
        ctx.globalAlpha = this.alpha;
        ctx.fillStyle = '#2c7be5';
        ctx.beginPath();
        ctx.moveTo(this.x, this.y);
        ctx.bezierCurveTo(this.x - 10, this.y - 10, this.x - 25, this.y + 10, this.x, this.y + 25);
        ctx.bezierCurveTo(this.x + 25, this.y + 10, this.x + 10, this.y - 10, this.x, this.y);
        ctx.fill();
        ctx.restore();
    }
    update() {
        this.y -= this.speed;
        this.alpha -= 0.01;
        if (this.alpha < 0) this.alpha = 0;
    }
}

// Animate hearts
function animate() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    hearts.forEach((h, i) => {
        h.update();
        h.draw();
        if (h.alpha <= 0) hearts.splice(i, 1);
    });
    requestAnimationFrame(animate);
}

// Add hearts on click
canvas.addEventListener('click', () => {
    for (let i=0; i<5; i++) {
        hearts.push(new Heart(400 + Math.random()*100-50, 400 + Math.random()*50-25, 10, Math.random()*2+1));
    }
    // Show birthday text
    document.getElementById('code').style.display = 'block';
});

// Start animation
animate();

// ==========================
// Typewriter effect for #code
// ==========================
const codeEl = document.getElementById('code');
const spans = codeEl.querySelectorAll('span');
spans.forEach(span => span.style.opacity = 0);

let idx = 0;
function typeWriter() {
    if (idx < spans.length) {
        spans[idx].style.opacity = 1;
        idx++;
        setTimeout(typeWriter, 500);
    }
}
canvas.addEventListener('click', typeWriter, {once:true});

</script>

